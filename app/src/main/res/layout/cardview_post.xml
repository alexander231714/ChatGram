<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageViewPosCard"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:scaleType="centerCrop"
            android:contentDescription="imgpost"
            />

        <TextView
            android:id="@+id/textViewTitlePostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text="Titulo: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewUsernamePostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text="Nombre de usuario"
            android:textColor="@color/skyblue"
            android:textSize="17sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewDescriptionPostcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion: "
            android:layout_margin="10dp"
            android:textSize="17sp"
            android:textColor="@color/gris"
            android:maxLines="2"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:id="@+id/imageViewLike"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_like_grey"/>

            <TextView
                android:id="@+id/textViewLikes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:textSize="16sp"
                android:textColor="@color/gris"
                android:text="0 Me gustas"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>